<div class="page-header" style="margin-top: 10px;">
  <h1 style="text-align:left;color:white;font-variant:small-caps;font-family:fantasy;margin-left:20px;">Kitchens</h1>
</div>
<div style="border-radius:4px;width:800px;height:500px;background-color:white;margin:auto;border:3px solid #333333;overflow:scroll;">
<table class="table table-striped table-bordered">
  <tr style="background-color:#ffcccc">
    <th id="table_header"> S.NO</th>
    <th id="table_header">Kitchen Name</th>
    <th id="table_header">Created At</th>
    <th id="table_header"></th>
  </tr>
  <%@i=0%>
<%@kitchens.each do |s|%>

  <tr>
    <td><%@i+=1%><%=@i%></td>
    <td><%=s.name%></td>
    <td><%=s.created_at.to_date%></td>
    <td>
      <%=link_to_modal "Edit", {:controller=>'kitchens',:action=>'edit',:id=>s.id},:class=>"btn-small btn-primary"%>
      <%=link_to "Delete", {:controller => 'kitchens', :action => 'destroy', :id => s.id }, :method => 'delete', :confirm => 'Are you sure?', :class => "btn-small btn-danger"%>
    </td>
  </tr>

<%end%>
</table>
    <br/>
    <%=link_to_modal "Create New Kitchen", {:controller=>'kitchens',:action=>'new'},:class=>"btn-large btn-success"%>
</div>
