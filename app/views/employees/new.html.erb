<div style="position: relative; height: 500px; width: 300px; left: 100px;">
<h2>New Employee</h2>
<%= form_for @employee, {:url=>'/employees/create' } do |f| %>
<%#= f.error_messages %>
<%= render 'shared/error_messages', :target => f.object %>
<div class="form-inputs">
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :position %>
  <%= f.select :position_id, @positions.collect { |p| [ p.name, p.id ] }, { :prompt => "Select Position" } %>

  <%= f.label :branch %>
  <%=f.select :branch_id, @branches.collect{|p| [p.name,p.id]},{:prompt=> "Select Branch"}%>

</div>
<div class="form-actions">
  <%= f.submit "Sign up", :class => 'btn btn-primary' %>
</div>

<% end %>
</div>