<h2>Employees</h2>
<div style="width:800px;height:500px;background-color:white;margin:auto;border:3px solid #333333;overflow:scroll;">
<table class="table table-striped table-bordered">
  <tr >
    <th style="background-color:rgb(0, 108, 204);color: white;"> Employee No </th>
   
    <th style="background-color:rgb(0, 108, 204);color: white;"> Employee Name</th>
     <th style="background-color:rgb(0, 108, 204);color: white;">Joining Date</th>

    <th style="background-color:rgb(0, 108, 204);color: white;"></th>
  </tr>

<%@employees.each do |e|%>

  <tr>
    <td><%=e.employee_no%></td>
    <td><%=e.full_name%></td>
    <td><%=e.created_at.to_date%></td>
    <td><%=link_to_modal "edit", {:controller=>'employees',:action=>'edit',:id=>e.id},:class=>"btn-small btn-primary"%></td>
  </tr>

<%end%>
</table>
    <br/>
    <%=link_to_modal "Add New Employee", {:controller=>'employees',:action=>'new'},:class=>"btn-large btn-success"%>
</div>