<div style="width:800px;height:500px;background-color:white;margin:auto;border:3px solid #333333;overflow:scroll;">

<% if @aboutus.empty? %>
  <p>No Content is added to About us page!</p>
  <%=link_to_modal "Add Content", {:controller=>'abouts',:action=>'new'},:class=>"btn-large btn-primary"%>
  <% else %>
<% @aboutus.each do |a| %>
  <h1><%= a.title %></h1></br>
  <%= a.description %></br>
  <%= link_to_modal "Edit", {:controller => 'abouts', :action => 'edit', :id=>a.id}, :class => "btn-small btn-primary" %>
  <%= link_to "Delete", {:controller => 'abouts', :action => 'destroy', :id => a.id}, :method => 'delete', :confirm => "Are you sure?", :class => "btn-small btn-danger" %>
<% end %>
<% end %>
</div>