
<style>
  #sbtn{
    height: 40px;
    width: 80px;
}
</style>

<div style="margin-left:55%;margin-top:3%; width:200px;border:5px solid #999999;padding: 100px;border-radius:300px 50px;background-color:#DAEBA9;">
  <h1 style="text-align:center;font-family:fantasy;">Log In</h1>
<%= form_for(resource ,:as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class="control-group">
<%= f.label :email,:class=>"control-label" %>
  <div class="controls"><%= f.email_field :email, :id => 'card_no' %></div>

  <%= f.label :password,:class=>"control-label" %>
  <div class="controls"> <%= f.password_field :password, :id => 'card_no' %></div>

  <% if devise_mapping.rememberable? -%>
    
    <div class="controls">
      <%= f.check_box :remember_me %> 
      <%= f.label :remember_me %>
    </div>
    


  <% end -%>

  <div><%= f.submit "Sign in", :class=>'btn btn-success', :id => 'sbtn'%></div>
</div>
<% end %>
</div>

<%#= render "devise/shared/links" %>
